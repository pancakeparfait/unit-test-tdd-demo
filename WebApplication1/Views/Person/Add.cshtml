@model WebApplication1.Models.Person.AddPersonViewModel

@{
    ViewBag.Title = "Add Person";
}

<h2>Add Person</h2>

@using (Html.BeginForm("Add"))
{
    <fieldset>
        <div class="form-group">
            @Html.LabelFor(x => x.GivenName)
            @Html.TextBoxFor(x => x.GivenName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.GivenName, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Surname)
            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Surname, null, new { @class = "text-danger" })
        </div>
        <button type="submit" class="btn btn-lg btn-primary">Save</button>
    </fieldset>
}